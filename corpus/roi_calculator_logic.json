  "energy_savings_calculation": {
    "baseline_annual_kwh": {
      "formula": "input_kw * annual_runtime_hours",
      "example": "12 kW * 3,980 hours = 47,760 kWh"
    },
    "savings_kwh": {
      "formula": "baseline_kwh * improvement_percent",
      "example": "47,760 * 0.232 = 11,080 kWh saved"
    },
    "cost_savings": {
      "formula": "savings_kwh * electricity_rate",
      "example": "11,080 * $0.12 = $1,330 annual savings"
    }
  },
  "thermodynamic_formulas": {
    "source": "IPMVP Option B methodology",
    "kw_calculation": {
      "single_phase": "kW = Volts * Amps * 1.47 / 1000",
      "three_phase": "kW = Volts * Amps * 0.85 * 1.732 / 1000"
    },
    "tonnage": {
      "formula": "Tons = (CFM * 4.5 * Enthalpy_Delta) / 12000",
      "components": {
        "CFM": "Cubic feet per minute airflow",
        "Enthalpy_Delta": "Difference in BTU/lb between entering and leaving air",
        "12000": "BTU per ton of refrigeration"
      }
    },
    "kw_per_ton": {
      "formula": "kW/ton = kW / Actual_Tonnage",
      "interpretation": "Lower is better - represents cost to produce each ton of cooling"
    },
    "cop": {
      "formula": "COP = 12 / (kW/ton) / 3.412",
      "interpretation": "Higher is better - units of cooling output per unit of energy input"
    },
    "seer": {
      "formula": "SEER = COP * 3.792",
      "source": "Pacific Gas & Electric Co."
    },
    "eer": {
      "formula": "EER = BTUh / Watts",
      "interpretation": "Higher is better"
    }
  },
