  ],

  "common_errors": [
    {
      "error": "Single point measurement",
      "description": "Taking only one reading instead of averaging multiple",
      "impact": "High variability, unreliable results",
      "correction": "Take minimum 3-5 readings over 15+ minutes, average results"
    },
    {
      "error": "Mismatched conditions",
      "description": "Comparing baseline at 95°F to post-treatment at 75°F",
      "impact": "Invalid comparison, efficiency naturally varies with ambient temp",
      "correction": "Measure at similar outdoor temperatures (within 5°F) or normalize"
    },
    {
      "error": "Transient measurements",
      "description": "Measuring during startup or staging changes",
      "impact": "Captures non-representative conditions",
      "correction": "Wait 15+ minutes after any capacity change before measuring"
    },
    {
      "error": "Wrong power measurement",
      "description": "Using amps × volts instead of true power (kW)",
      "impact": "Ignores power factor, overstates consumption",
      "correction": "Use true power meter or apply power factor correction"
    },
    {
      "error": "Assumed flow rate",
      "description": "Using nameplate GPM without verification",
      "impact": "Flow may differ significantly from design",
      "correction": "Measure flow or use consistent assumption for both tests"
    },
    {
      "error": "Mixed refrigerant charge",
      "description": "System low on refrigerant during one test",
      "impact": "Charge affects efficiency - not apples to apples",
      "correction": "Verify proper refrigerant charge before both measurements"
    }
  ],

  "normalization_guidance": {
    "when_needed": "When ambient conditions differ >5°F between baseline and post-treatment",
    "methods": [
      {
        "name": "Manufacturer Correction Curves",
        "description": "Use OEM performance curves to adjust capacity/efficiency to common conditions",
        "applicability": "When manufacturer data available"
      },
      {
        "name": "AHRI Standard Rating",
        "description": "Correct to AHRI standard conditions (95°F ambient for air-cooled)",
        "applicability": "For comparative purposes"
      },
      {
        "name": "Linear Interpolation",
        "description": "For small condition differences, linear adjustment acceptable",
        "formula": "Adjusted kW/ton = Measured × (Standard Temp / Actual Temp)^0.5"
      }
    ]
  },

  "documentation_requirements": {
    "pe_certification_elements": [
      "Measurement methodology description",
      "Instruments used with calibration status",
      "All raw measurement data with timestamps",
      "Ambient conditions documentation",
      "Calculations showing efficiency metrics",
      "Comparison and improvement percentage",
      "PE signature, license number, date"
    ],
    "minimum_photos": [
      "Equipment nameplate",
      "Instrumentation setup",
      "Power meter reading",
      "Temperature/pressure readings",
      "Overall equipment condition"
    ]
  },

  "training_notes": {
    "key_concepts": [
      "kW/ton is primary efficiency metric - lower is better",
      "COP is the inverse perspective - higher is better",
      "Consistent measurement conditions are critical",
      "PE certification adds credibility and utility rebate eligibility",
      "Multiple readings are more reliable than single snapshots"
    ],
    "conversion_formulas": {
      "cop_to_kw_per_ton": "kW/ton = 12 / COP",
      "kw_per_ton_to_cop": "COP = 12 / kW/ton",
      "cop_to_eer": "EER = COP × 3.412",
      "tons_from_chw": "Tons = (GPM × ΔT × 500) / 12,000",
      "tons_from_air": "Tons (sensible) = (CFM × ΔT × 1.08) / 12,000"
    }
  }
}
